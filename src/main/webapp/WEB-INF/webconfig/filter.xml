<!-- 安全过滤器 -->
<filter>
	<filter-name>SecurityFilter</filter-name>
	<filter-class>com.geelun.framework.security.SecurityFilter</filter-class>
</filter>
<filter-mapping>
	<filter-name>SecurityFilter</filter-name>
	<url-pattern>*.html</url-pattern>
</filter-mapping>

<filter-mapping>
	<filter-name>SecurityFilter</filter-name>
	<url-pattern>*.jsp</url-pattern>
</filter-mapping>

<!-- 权限过滤器 -->
<filter>
	<filter-name>AccessFilter</filter-name>
	<filter-class>com.geelun.framework.security.AccessFilter</filter-class>
</filter>
<filter-mapping>
	<filter-name>AccessFilter</filter-name>
	<url-pattern>*.html</url-pattern>
</filter-mapping>

<filter-mapping>
	<filter-name>AccessFilter</filter-name>
	<url-pattern>*.jsp</url-pattern>
</filter-mapping>